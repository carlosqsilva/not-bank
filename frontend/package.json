{
	"name": "frontend",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"relay": "mkdir -p src/__generated__ && relay-compiler",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview"
